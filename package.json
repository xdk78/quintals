{
  "name": "quintals",
  "version": "0.0.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "cross-env ENV=development electron main.js",
    "dev": "concurrently \"npm run watch-renderer\" \"npm run watch-main\"",
    "watch-renderer": "webpack-dev-server --config webpack.config.renderer.dev.js  --watch --mode development",
    "watch-main": "webpack --config webpack.config.main.js --watch --mode development",
    "build-renderer": "webpack --config webpack.config.renderer.prod.js",
    "build-main": "webpack --config webpack.config.main.js --mode production",
    "build": "concurrently \"npm run build-renderer\" \"npm run build-main\" electron-builder ",
    "build-win": "npm run build && electron-builder -w -p always",
    "build-mac": "npm run build && electron-builder -m -p always",
    "build-linux": "npm run build && electron-builder -l -p always",
    "lint": "tslint \"src/**/*.ts*\"",
    "lint-fix": "prettier --write \"src/**/*.ts*\" && tslint \"src/**/*.ts*\" --fix",
    "postinstall": "electron-builder install-app-deps"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.+\\.spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ]
  },
  "author": {
    "name": "xdk78",
    "email": "xdk78888@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^24.0.9",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-loadable": "^5.5.0",
    "@types/react-redux": "^7.0.1",
    "@types/react-router": "^4.4.4",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/webpack-env": "^1.13.7",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "bluebird": "^3.5.3",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "react-hot-loader": "^4.7.1",
    "react-test-renderer": "^16.8.3",
    "redux-devtools-extension": "^2.13.8",
    "source-map-loader": "^0.2.4",
    "spectron": "^5.0.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.0",
